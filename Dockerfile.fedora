FROM fedora:latest

RUN dnf upgrade -y && \
	dnf install -y \
	cmake \
	ninja \
	qt5-qtbase-devel \
	qt5-qtsvg-devel \
	qt5-qtmultimedia-devel \
	gstreamer1-devel \
	gstreamer1-plugins-base-devel \
	spdlog-devel \
	taglib-devel \
	taglib-extras-devel

COPY ./ /openkj/
WORKDIR /openkj/
RUN cmake -DSPDLOG_USE_BUNDLED=true . -B build -G Ninja
RUN ninja -C build
